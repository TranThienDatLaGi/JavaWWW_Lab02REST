<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>vn.edu.iuh.fit.backend.models.Customer</class>
        <class>vn.edu.iuh.fit.backend.models.Employee</class>
        <class>vn.edu.iuh.fit.backend.models.OrderDetail</class>
        <class>vn.edu.iuh.fit.backend.models.Orders</class>
        <class>vn.edu.iuh.fit.backend.models.Product</class>
        <class>vn.edu.iuh.fit.backend.models.ProductImage</class>
        <class>vn.edu.iuh.fit.backend.models.ProductPrice</class>
        <class>vn.edu.iuh.fit.backend.enums.EmployeeStatus</class>
        <class>vn.edu.iuh.fit.backend.enums.ProductStatus</class>
        <class>vn.edu.iuh.fit.backend.converts.EmployeeStatusConvert</class>
        <class>vn.edu.iuh.fit.backend.converts.ProductStatusConvert</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/JavaWWWlab02?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="sapassword"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
